<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:id="@+id/animationContainerLayout"
    android:gravity="center"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/animationImageView1"
            android:layout_width="@dimen/animation_ImageView_width"
            android:layout_height="@dimen/max_animation_height"
            android:layout_margin="2dp"
            android:src="@drawable/record_animation_shape" />

        <ImageView
            android:id="@+id/animationImageView2"
            android:layout_width="@dimen/animation_ImageView_width"
            android:layout_height="@dimen/min_animation_height"
            android:layout_margin="2dp"
            android:src="@drawable/record_animation_shape" />


        <ImageView
            android:id="@+id/animationImageView3"
            android:layout_width="@dimen/animation_ImageView_width"
            android:layout_height="@dimen/max_animation_height"
            android:layout_margin="2dp"
            android:src="@drawable/record_animation_shape" />

        <ImageView
            android:id="@+id/animationImageView4"
            android:layout_width="@dimen/animation_ImageView_width"
            android:layout_height="@dimen/max_animation_height"
            android:layout_margin="2dp"
            android:src="@drawable/record_animation_shape" />

        <ImageView
            android:id="@+id/animationImageView5"
            android:layout_width="@dimen/animation_ImageView_width"
            android:layout_height="@dimen/min_animation_height"
            android:layout_margin="2dp"
            android:src="@drawable/record_animation_shape" />
    </LinearLayout>

</RelativeLayout>
